{% extends 'base.html.twig' %}


{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<style>
.hide{
    display:none;
}
</style>
<link rel="stylesheet" href="/css/connexion.css">
{% endblock %}

{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
    
              <a class="navbar-brand" href="#"> <img class="img-fluid" src="/img/logo/nav-logo.png" alt="logo"></a>
    
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
    </header>
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

 

 

    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


    <main>
        <div class="container-fluid">
            <div class="row align-items-center">
                
                <div class="col-4 offset-1">
                    <img class="img-fluid" src="/img/connexion/digital.jpg" alt="">
                </div>

                <div class="form col-3 offset-2 text-center">
                <h2>Connexion</h2>

                <form method="post" action="">

                        <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                        >
                
                    <div class="input pseudo">
                            <i class="corner corner-top-left"></i>
                            <i class="corner corner-top-right"></i>
                            <input type="text" id="email" name="email" placeholder="Pseudo">
                            <i class="corner corner-bottom-left"></i>
                            <i class="corner corner-bottom-right"></i>
                        </div>
                    
                    <div class="input password">
                            <i class="corner corner-top-left"></i>
                            <i class="corner corner-top-right"></i>
                            <input type="password" name="password" id="user_password" autocomplete="current-password" required placeholder="Mot de passe">
                            <i class="corner corner-bottom-left"></i>
                            <i class="corner corner-bottom-right"></i>
                    </div>

                    <div class="forgot_password mb-5">
                            <a href="#">Mot de passe oubli√© ?</a>
                    </div>


                    <div class="button">
                            <button class="btn btn-primary" a href="{{ path('app_home') }}" type='submit'> Se connecter </button>
                    </div>

                </form>

                <div class="separation  "></div>

                <a class="inscription" href="{{ path('app_register') }}"> Je n'ai pas encore de compte </a>
            
            </div>

        </div>
   
    </main>

     {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
    {% endblock %}

{% endblock %}


