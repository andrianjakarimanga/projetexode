<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EXODE</title>
    <link rel="stylesheet" href="/Games/Lumiere/toggleLight.css">
    <link rel="stylesheet" href="/room_style.css">
    <link rel="stylesheet" href="/gameInterface.css">
    <link rel="stylesheet" href="/screenIntroEnd.css">

</head>

<body>


    <main>


{# SCREEN INTRO #}
        <div id='screenIntro'>
            
            <div id="blackScreenIntro">
                <div id="logoExode"></div>
            </div>
        </div> 


        {# CHRONO #}
        <div id="chronoBox" class='bulle'>
            <div id="minuteur"></div>
            {# <audio id="sonChrono" src="/public/son/CLOCKTick_Minuteur (ID 0082)_LS.ogg"></audio> #}
        </div>
        {# FIN CHRONO #}

        <!--DEBUT DE BULLE INDICE-->
        <div id="indice" >   
            <p id="text-indice"></p>
        </div>
        <!--FIN DE BULLE INDICE-->


        <!--DEBUT DE BTN INDICE-->
        <div id="btn-indice">
            <a href="#"><img src="\svg\icone\screen-start\icone-indice.svg" alt="icone indice"></a>
        </div>

        <!--DEBUT DE EXIT-->
        <a href="#">
            <div id="exit"></div>
        </a>
        <!--FIN DE EXIT-->

        <!--DEBUT DE NARRATION-->
        <div id="narration">
            <i class="corner corner-top-left"></i>
            <i class="corner corner-top-right"></i>
            <p id="text-narration">Vous avez 30 minutes pour ouvrir la porte.<br>Explorez la pièce et trouvez comment vous en échapper.  
            </p>
            <i class="corner corner-bottom-left"></i>
            <i class="corner corner-bottom-right"></i>
        </div>
        <!--FIN DE NARRATION-->


        <div id="toggleLight"> </div>
        <!----------------------- ROOM ------------------------>

        <!-- Btn Imgages, au clic ouvertures des VUES -->
        <div id="zoomCoffresBtn" class="zoom coffres hidden "></div>
        <div id="zoomSnakeBtn" class="zoom snake hidden"></div>
        <div id="zoomBoitierBtn" class="zoom boitier hidden"></div>
        <div id="zoomAfficheBtn" class="zoom affiche hidden"></div>




        <!----------------------- VUES ------------------------->



        <!-- VUE SNAKE -->

        <div class="modal hidden" id="vueSnake">
            <span class="closeVue closeVueSnakeBtn">X</span>

            <!-- By clic ouverture snake -->
            <div id="openSnakeBtn" class="zoom"></div>

            <!-- PopUp Snake -->
            <div id="popupSnake" class="hidden">
                <span class="closePopUp closePopUpSnakeBtn hidden">X</span>
                <div id="gameScreenSnake" class="snakeScreen">
                    <!-- Chargement du snake ici -->
                </div>
            </div>
        </div>


        <!-- VUE AFFICHE -->

        <div class="modal hidden" id="vueAffiche">
            <span class="closeVue closeVueAfficheBtn">X</span>

            <!-- Btn puzzle opening -->
            <div id="openPuzzleBtn" class="zoom"></div>

            <!-- PopUp Puzzle -->
            <div id="popupPuzzle" class="hidden">
                <span class="closePopUp closePopUpAfficheBtn hidden">X</span>

                <div id="gameScreenPuzzle" class="puzzleScreen">
                    <!-- Chargement du puzzle ici -->
                </div>
            </div>
        </div>




        <!-- VUE COFFRES -->

        <div class="modal hidden" id="vueCoffres">
            <span class="closeVue closeVueCoffresBtn">X</span>


            <!-- By clic ouverture tour Hanoï -->
            <div id="openHanoiBtn" class="zoom"></div>

            <!-- PopUp Hanoi -->
            <div id="popupHanoi" class="hidden">
                <span class="closePopUp closePopUpHanoiBtn">X</span>
                <div id="gameScreenHanoi" class="hanoiScreen">
                    <!-- Chargement tour d'hanoï ici -->
                </div>
            </div>
        </div>



        <!-- VUE BOITIER -->

        <div class="modal hidden" id="vueBoitier">
            <span class="closeVue closeVueBoitierBtn">X</span>


            <!-- By clic ouverture boitier éléctrique -->
            <div id="openBoitierBtn" class="zoom"></div>

            <!-- PopUp Boitier cables -->
            <div id="popupBoitier" class="hidden">
                <span class="closePopUp closePopUpBoitierBtn hidden">X</span>
                <div id="gameScreenBoitier" class="boitierScreen">
                    <!-- Chargement énigme ici -->
                </div>
            </div>
        </div>

<div id='doorOpening' class='hidden'>
<div id='doorOpenGif'></div>
</div>

    </main>






    <script src="https://code.jquery.com/jquery-3.6.1.js"
        integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

    <script src="/room_main.js"></script>
    <script src="/gameInterface.js"></script>
    <script src="/Games/Lumiere/toggleLight.js"></script>
</body>

</html>