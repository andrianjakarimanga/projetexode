{% endblock %}

{% block body %}
<!--DEBUT DU HEADER-->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
    
              <a class="navbar-brand" href="#"> <img class="img-fluid" src="/img/logo/nav-logo.png" alt="logo"></a>
    
